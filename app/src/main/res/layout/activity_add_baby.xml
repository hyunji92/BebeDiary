<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@android:color/transparent">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_baby_popup_background"
            android:orientation="vertical"
            android:layout_marginTop="112dp"
            android:layout_marginBottom="26dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_gravity="center|center_vertical"
                      android:gravity="center|center_vertical"
                      android:layout_marginLeft="28dp"
                      android:layout_marginRight="28dp"
                      android:layout_marginTop="21dp">

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/exit_button"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margintop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:text="아기 수정"
                    android:textSize="20sp"
                    android:textColor="#000000"
            />
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/add_button"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
                android:id="@+id/register_picture"
                android:layout_width="wrap_content"
                android:layout_height="270dp"
                android:layout_gravity="center|center_horizontal">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                <ImageView android:layout_width="60dp"
                           android:layout_height="25dp"
                           android:background="@drawable/ing"/>

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="10dp"
                           android:background="@drawable/pregnant_off"/>
            </LinearLayout>

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/empty_layout"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@drawable/empty_image"/>

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:layout_marginTop="10dp"
                           android:background="@drawable/empty_text"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="이름"
                          android:textSize="18sp"
                          android:layout_gravity="center"
                          android:layout_marginRight="5dp"
                          />

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="6"
                    />
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/popup_line"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="이름"
                          android:textSize="18sp"
                          android:layout_gravity="center"
                          android:layout_marginRight="5dp"
                          android:textColor="#000000"/>

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <android.support.design.widget.TextInputEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:maxLength="6"
                            android:layout_gravity="center"
                            android:textColor="@color/registerPopupTextColor"
                            tools:text="동동이"

                    />
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/popup_line"/>

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="15dp"
                     android:visibility="gone"
                     android:layout_gravity="center|center_horizontal">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/empty_image"/>

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/empty_text"/>
            <ImageView android:layout_width="300dp"
                       android:layout_height="300dp"
                       android:background="@drawable/test_image"/>

            <ImageView android:layout_width="300dp"
                       android:layout_height="300dp"
                       android:background="@drawable/test"/>
        </FrameLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="58dp">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="생일"
                      android:textSize="18sp"
                      android:layout_gravity="center"
                      android:layout_marginRight="5dp"
                      android:textColor="#000000"/>

            <FrameLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                         android:layout_marginTop="8dp"
            >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        tools:text="2019.09.29"
                        android:layout_gravity="center"
                        android:textColor="@color/registerPopupTextColor"
/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/popup_line"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/date_picker_button"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="right"
                />

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
