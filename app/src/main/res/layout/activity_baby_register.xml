<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#00000000">

    <LinearLayout
            android:layout_width="320dp"
            android:layout_height="500dp"
            android:background="@drawable/add_baby_popup_background"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="21dp">

            //나가기
            <ImageButton
                    android:id="@+id/register_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/exit_button"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="아기 수정"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
            //등록
            <ImageButton
                    android:id="@+id/register_baby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/add_button"/>
        </RelativeLayout>

        //임신중 체크, empty, 사진 등록
        <LinearLayout
                android:id="@+id/register_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:orientation="horizontal">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="임신중"
                          android:textSize="16sp"
                          android:textStyle="bold"
                          android:textColor="@color/greyTextColor"/>

                <ImageButton
                        android:id="@+id/pregnant_on_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/pregnant_off"/>

            </LinearLayout>

            <FrameLayout
                    android:id="@+id/register_image_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:layout_gravity="center|center_horizontal">

                <ImageView android:layout_width="185dp"
                           android:layout_height="185dp"
                           android:background="@drawable/test_image"/>

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@drawable/empty_layout"/>
            </FrameLayout>

        </LinearLayout>

        //이름, 생일, 성별 , 일정 알림
        <LinearLayout
                android:id="@+id/baby_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

            //이름
            <LinearLayout
                    android:id="@+id/name_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="이름"
                          android:textSize="18sp"
                          android:layout_gravity="center"
                          android:layout_marginRight="5dp"
                          android:textColor="#000000"/>

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">

                    <EditText
                            android:id="@+id/baby_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:maxLength="6"
                            android:layout_gravity="center"
                            android:hint="이름 입력"
                            android:inputType="text"
                            android:textColorHint="#efefef"
                            android:enabled="true"
                            android:textColor="@color/registerPopupTextColor"
                    />
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="@drawable/popup_line"/>

                </LinearLayout>
            </LinearLayout>

            //생일 / 출산 예정
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">

                <TextView
                        android:id="@+id/birthday_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출산 예정일"
                        android:textSize="18sp"
                        tools:text="생일"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginRight="5dp"
                        android:textColor="#000000"/>

                <FrameLayout android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:orientation="vertical"
                             android:layout_marginTop="8dp">
                    <TextView
                            android:id="@+id/baby_birthday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            tools:text="2019.09.29"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_marginBottom="4dp"
                            android:layout_marginRight="8dp"
                            android:textColor="@color/registerPopupTextColor"
                    />
                    <ImageView
                            android:id="@+id/birthday_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            tools:background="@drawable/popup_line"
                            android:background="@drawable/gender_popup_line"/>

                    <ImageView
                            android:id="@+id/date_picker_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/date_picker_button"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="end"
                    />

                </FrameLayout>
            </LinearLayout>
            //임신중이면 버튼 클릭하라는 안내
            <TextView
                    android:id="@+id/pregnant_guide_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="-임신중일 경우 임신중 버튼을 켜주세요."
                    android:textColor="@color/greyTextColor"
                    android:visibility="gone"/>
            //성별
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:visibility="visible"
                    tools:visibility="visible"
                    android:layout_marginTop="5dp">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="성별"
                          android:textSize="18sp"
                          android:layout_gravity="center_vertical"
                          android:layout_marginRight="5dp"
                          android:textColor="#000000"/>

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">

                    <EditText
                            android:id="@+id/baby_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:maxLength="2"
                            android:layout_gravity="center"
                            android:hint="성별 입력"
                            android:textColorHint="#efefef"
                            android:textColor="@color/registerPopupTextColor"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gender_popup_line"/>
                </LinearLayout>
            </LinearLayout>

            //일정 알림
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="8dp">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="일정알림"
                          android:textSize="14sp"
                          android:layout_gravity="center_vertical"
                          android:layout_marginRight="5dp"
                          android:textColor="@color/registerPopupTextColor"/>

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:maxLength="6"
                            android:layout_gravity="center"
                            android:textColor="@color/registerPopupTextColor"
                            tools:text="1 + 일전"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/day_line"/>
                </LinearLayout>
            </LinearLayout>

            //지난 일정 보기
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지난 일정 보기 "
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/registerPopupTextColor"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/check_day_before"
                />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
