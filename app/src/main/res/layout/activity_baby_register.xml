<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="#00000000"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="320dp"
            android:layout_height="500dp"
            android:background="@drawable/add_baby_popup_background"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="26dp">

            //나가기
            <ImageButton
                    android:id="@+id/register_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"
                    android:background="@drawable/exit_button"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="아기 수정"
                    android:textColor="#000000"
                    android:textSize="20sp"/>
            //등록

            <ImageButton
                    android:id="@+id/register_baby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"
                    android:background="@drawable/add_button"
                    android:clickable="true"/>
        </RelativeLayout>

        //임신중 체크, empty, 사진 등록

        <LinearLayout
                android:id="@+id/register_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="임신중"
                        android:textColor="@color/greyTextColor"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                <ImageButton
                        android:id="@+id/pregnant_on_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/pregnant_off"/>

            </LinearLayout>

            <FrameLayout
                    android:id="@+id/register_image_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:visibility="visible">


                <ImageView
                        android:id="@+id/empty_baby_image_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/empty_image_register"
                        android:visibility="visible"/>

                <ImageView
                        android:id="@+id/baby_image"
                        android:layout_width="185dp"
                        android:layout_height="185dp"
                        android:visibility="gone"
                        tools:background="@drawable/test_image"/>

                <ImageView
                        android:id="@+id/baby_image_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/empty_layout"
                        android:visibility="gone"/>


            </FrameLayout>

        </LinearLayout>

        //이름, 생일, 성별 , 일정 알림

        <LinearLayout
                android:id="@+id/baby_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

            //이름

            <LinearLayout
                    android:id="@+id/name_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="13dp"
                        android:text="이름"
                        android:textColor="#000000"
                        android:textSize="18sp"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <EditText
                                android:id="@+id/baby_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:enabled="true"
                                android:hint="이름 입력"
                                android:inputType="text"
                                android:maxLength="6"
                                android:maxLines="1"
                                android:background="@null"
                                android:textColor="@color/registerPopupTextColor"
                                android:textColorHint="#efefef"
                                android:textSize="16sp"/>
                        <ImageView
                                android:id="@+id/name_line"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:background="@drawable/popup_line"/>
                    </FrameLayout>


                </LinearLayout>
            </LinearLayout>

            //생일 / 출산 예정

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/birthday_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginRight="13dp"
                        android:text="생일"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        tools:text="출산 예정일"/>

                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/baby_birthday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/registerPopupTextColor"
                            android:textSize="16sp"
                            tools:text="2019.09.29"/>

                    <ImageView
                            android:id="@+id/birthday_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="@drawable/popup_line"
                            tools:background="@drawable/gender_popup_line"/>

                    <ImageView
                            android:id="@+id/date_picker_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/date_picker_button"/>

                </FrameLayout>
            </LinearLayout>
            //임신중이면 버튼 클릭하라는 안내

            <TextView
                    android:id="@+id/pregnant_guide_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="-임신중일 경우 임신중 버튼을 켜주세요."
                    android:textColor="@color/greyTextColor"
                    android:visibility="gone"/>
            //성별

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    tools:visibility="visible">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:text="성별"
                        android:textColor="#000000"
                        android:textSize="18sp"/>

                <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/babyRegisterFeMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorPrimary"
                            android:checked="true"
                            android:text="여자"/>

                    <CheckBox
                            android:id="@+id/babyRegisterMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorPrimary"
                            android:text="남자"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
